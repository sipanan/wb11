{
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        },
        "color": {
            "palette": [
                {
                    "slug": "primary-red",
                    "color": "#E2001A",
                    "name": "Primary Red"
                },
                {
                    "slug": "dark-gray",
                    "color": "#333333",
                    "name": "Dark Gray"
                },
                {
                    "slug": "white",
                    "color": "#FFFFFF",
                    "name": "White"
                },
                {
                    "slug": "accent-background",
                    "color": "#f5f5f5",
                    "name": "Accent Background"
                },
                {
                    "slug": "dark-red",
                    "color": "#B20510",
                    "name": "Dark Red"
                },
                {
                    "slug": "light-gray",
                    "color": "#666666",
                    "name": "Light Gray"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-gradient",
                    "gradient": "linear-gradient(135deg, #E2001A 0%, #B20510 100%)",
                    "name": "Primary Gradient"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "\"Montserrat\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif",
                    "slug": "montserrat",
                    "name": "Montserrat"
                },
                {
                    "fontFamily": "\"Open Sans\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif",
                    "slug": "open-sans",
                    "name": "Open Sans"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "14px",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "16px",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "18px",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "24px",
                    "name": "Extra Large"
                },
                {
                    "slug": "xx-large",
                    "size": "32px",
                    "name": "XX Large"
                },
                {
                    "slug": "xxx-large",
                    "size": "48px",
                    "name": "XXX Large"
                }
            ]
        },
        "spacing": {
            "spacingScale": {
                "operator": "*",
                "increment": 1.5,
                "steps": 7,
                "mediumStep": 1.5,
                "unit": "rem"
            },
            "spacingSizes": [
                {
                    "slug": "xs",
                    "size": "0.5rem",
                    "name": "Extra Small"
                },
                {
                    "slug": "s",
                    "size": "1rem",
                    "name": "Small"
                },
                {
                    "slug": "m",
                    "size": "1.5rem",
                    "name": "Medium"
                },
                {
                    "slug": "l",
                    "size": "2rem",
                    "name": "Large"
                },
                {
                    "slug": "xl",
                    "size": "3rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "xxl",
                    "size": "4rem",
                    "name": "XX Large"
                }
            ]
        },
        "border": {
            "radius": true,
            "color": true,
            "style": true,
            "width": true
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--dark-gray)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--montserrat)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xxx-large)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xx-large)",
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "600",
                    "lineHeight": "1.4"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "500",
                    "lineHeight": "1.4"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary-red)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--dark-red)"
                    }
                }
            }
        },
        "blocks": {
            "core/button": {
                "color": {
                    "background": "var(--wp--preset--color--primary-red)",
                    "text": "var(--wp--preset--color--white)"
                },
                "typography": {
                    "fontWeight": "600"
                },
                "border": {
                    "radius": "6px"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ]
}