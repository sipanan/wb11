{
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"palette": [
				{
					"slug": "primary",
					"color": "#E30613",
					"name": "Primary Red"
				},
				{
					"slug": "primary-dark", 
					"color": "#C2050F",
					"name": "Primary Dark"
				},
				{
					"slug": "white",
					"color": "#FFFFFF",
					"name": "White"
				},
				{
					"slug": "black",
					"color": "#1A1A1A",
					"name": "Black"
				},
				{
					"slug": "gray-100",
					"color": "#F8F9FA",
					"name": "Light Gray"
				},
				{
					"slug": "gray-600",
					"color": "#6C757D",
					"name": "Medium Gray"
				}
			],
			"gradients": [
				{
					"slug": "primary-gradient",
					"gradient": "linear-gradient(135deg, #E30613 0%, #C2050F 100%)",
					"name": "Primary Gradient"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "system-ui, -apple-system, \"Segoe UI\", Roboto, sans-serif",
					"name": "System Font",
					"slug": "system"
				}
			],
			"fontSizes": [
				{
					"size": "0.875rem",
					"slug": "small",
					"name": "Small"
				},
				{
					"size": "1rem",
					"slug": "medium",
					"name": "Medium"
				},
				{
					"size": "1.25rem",
					"slug": "large",
					"name": "Large"
				},
				{
					"size": "2rem",
					"slug": "x-large",
					"name": "Extra Large"
				},
				{
					"size": "3rem",
					"slug": "xx-large",
					"name": "XX Large"
				}
			]
		},
		"spacing": {
			"padding": true,
			"margin": true,
			"blockGap": true,
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"size": "0.5rem",
					"slug": "x-small",
					"name": "X-Small"
				},
				{
					"size": "1rem",
					"slug": "small",
					"name": "Small"
				},
				{
					"size": "1.5rem",
					"slug": "medium",
					"name": "Medium"
				},
				{
					"size": "2rem",
					"slug": "large",
					"name": "Large"
				},
				{
					"size": "3rem",
					"slug": "x-large",
					"name": "X-Large"
				},
				{
					"size": "5rem",
					"slug": "xx-large",
					"name": "XX-Large"
				}
			]
		},
		"layout": {
			"contentSize": "1200px",
			"wideSize": "1400px"
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--black)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--medium)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"fontWeight": "700",
					"lineHeight": "1.2"
				},
				"color": {
					"text": "var(--wp--preset--color--black)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "700",
					"lineHeight": "1.3"
				},
				"color": {
					"text": "var(--wp--preset--color--black)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "600",
					"lineHeight": "1.4"
				},
				"color": {
					"text": "var(--wp--preset--color--black)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--primary-dark)"
					}
				}
			}
		},
		"blocks": {
			"core/button": {
				"border": {
					"radius": "50px"
				},
				"typography": {
					"fontWeight": "600"
				},
				"variations": {
					"outline": {
						"border": {
							"color": "var(--wp--preset--color--primary)",
							"width": "2px"
						},
						"color": {
							"text": "var(--wp--preset--color--primary)"
						}
					}
				}
			},
			"core/group": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--medium)",
						"bottom": "var(--wp--preset--spacing--medium)"
					}
				}
			},
			"core/columns": {
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--large)"
					}
				}
			}
		}
	}
}